<!--pages/main-music/main-music.wxml-->
<!-- 1.Vant搜索框 -->
<van-search
  value="{{ searchValue }}"
  shape="round"
  background="#fafafa"
  placeholder="请输入搜索关键词"
  bind:click-input="onSearchClick"
/>

<!-- 2.轮播图 -->
<swiper class="banner" circular indicator-dots autoplay style="height: {{bannerHeight}}px;">
  <block wx:for="{{banners}}" wx:key="targetId">
    <swiper-item class="item">
      <image class="banner-image" src="{{item.imageUrl}}" mode="widthFix" bindload="onBannerLoad"></image>
    </swiper-item>
  </block>
</swiper>